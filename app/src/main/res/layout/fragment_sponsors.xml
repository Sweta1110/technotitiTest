<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.android.technoriti.SponsorsFragment"
    android:background="@color/colorPrimary">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
        android:id="@+id/sponserstext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:text="Sponsors"
        android:padding="8dp"
        android:gravity="center"
        android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
        android:background="@drawable/back"
        android:textColor="#c6ff00"
        android:textSize="30sp" />
      <TextView
        android:id="@+id/sponsorsText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
          android:layout_below="@+id/sponserstext"
        android:text="@string/list_still_to_be_updated"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="16dp"
        android:textSize="@dimen/SponsorsTextPadding"
        android:textColor="#FFFFFF"/>

      <ImageView
        android:layout_below="@id/sponsorsText"
        android:id="@+id/sponsors2016"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:src="@drawable/sponsors2016"/>

     <ImageView
        android:layout_below="@+id/sponsors2016"
        android:id="@+id/sponsors2015"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:src="@drawable/sponsors2015"/>
    </RelativeLayout>

</ScrollView>
